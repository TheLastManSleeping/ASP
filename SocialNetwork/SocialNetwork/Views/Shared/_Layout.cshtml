@using System.Security.Claims
<!DOCTYPE html>
<html>
<head>
    <!-- //Meta tag Keywords -->
    <title></title>
    <meta charset="utf-8">
    <link  rel="stylesheet" href="~/css/bootstrap.css">
        @if (@User.FindFirstValue(ClaimTypes.NameIdentifier) != null)
        {
            <form action="/User/Edit?id=@User.FindFirstValue(ClaimTypes.NameIdentifier)" method="post">
                <a class="btn btn-sm btn-primary" asp-action="UserPage" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">На свою страницу</a>
                <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Изменить информацию</a>
                <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@User.FindFirstValue(ClaimTypes.NameIdentifier)">Сменить пароль</a>
                <a class="btn btn-sm btn-primary" asp-action="Friends">Список друзей</a>
                <a class="btn btn-sm btn-primary" href="/Dialogs/Dialogs">Переписки</a>
            </form>
        }

</head>
<body>
@RenderBody()
</body>
</html>